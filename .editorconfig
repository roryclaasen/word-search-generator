root = true

[*]
charset = utf-8
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 4
indent_style = space

[*.{md,mdx}]
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx}]
indent_size = 4
indent_style = space

[*.{json,yml,yaml}]
indent_size = 2
indent_style = space

[.{prettierrc,htmlhintrc}]
indent_size = 2
indent_style = space
