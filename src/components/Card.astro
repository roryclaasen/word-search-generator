---
import classNames from 'classnames';

// eslint-disable-next-line @typescript-eslint/no-unused-vars
interface Props {
    class?: string;
    title?: string;
    slotClass?: string;
    stickyTitle?: boolean;
}

const { class: cardName, slotClass, title, stickyTitle = false } = Astro.props;
---

<div class={classNames('bg-stone-100 flex flex-col sm:rounded shadow', cardName)}>
    {
        title && (
            <div class={classNames('p-3 border-b-2 border-stone-200', { 'bg-stone-100 sticky top-0': stickyTitle })}>
                <h3 class="text-lg font-medium">{title}</h3>
            </div>
        )
    }
    <div class={classNames('flex p-3', slotClass)}>
        <slot />
    </div>
</div>
